<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <gradient
                    android:startColor="@color/dark_royal_blue"
                    android:endColor="@color/cap_one_blue"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="#e2e6eb"/>
            <corners
                    android:radius="1dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="@color/cap_one_blue"
                    android:endColor="@color/dark_royal_blue"
                    android:angle="270"/>
            <corners
                    android:radius="1dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
</selector>